{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@shopware/*": ["vendor/shopware/administration/Resources/app/administration/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": false
  },
  "include": [
    "custom/static-plugins/**/Resources/app/administration/src/**/*",
    "vendor/shopware/administration/Resources/app/administration/src/**/*"
  ],
  "exclude": ["node_modules"]
}
